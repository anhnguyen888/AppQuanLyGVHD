@model MyAspNetCoreApp.Models.ViewModels.AdvisorAssignmentListViewModel

@{
    ViewData["Title"] = "Phân công Giảng viên hướng dẫn";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới phân công</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Mã sinh viên</th>
            <th>Tên sinh viên</th>
            <th>Mã giảng viên</th>
            <th>Tên giảng viên</th>
            <th>Ngày bắt đầu</th>
            <th>Ghi chú</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Assignments)
        {
            <tr>
                <td>@item.SinhVien.MaSinhVien</td>
                <td>@item.SinhVien.HoTen</td>
                <td>@item.GiangVien.MaGiangVien</td>
                <td>@item.GiangVien.HoTen</td>
                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                <td>@item.GhiChu</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>