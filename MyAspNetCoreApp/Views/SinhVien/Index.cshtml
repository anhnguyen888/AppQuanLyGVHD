@model IEnumerable<MyAspNetCoreApp.Models.SinhVien>
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h1>@ViewData["Title"]</h1>


@if ((User.IsInRole("Admin")))    
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
    </p>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaSinhVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lop)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSinhVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lop)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SinhVienId" class="btn btn-warning btn-sm">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.SinhVienId" class="btn btn-info btn-sm">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.SinhVienId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>