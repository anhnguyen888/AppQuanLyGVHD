@model MyAspNetCoreApp.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc chắn muốn xóa sinh viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã sinh viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSinhVien)
        </dd>
        <dt class="col-sm-2">
            Họ tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Lớp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lop)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SinhVienId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>
</div>