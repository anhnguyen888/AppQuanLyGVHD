@model MyAspNetCoreApp.Models.SinhVien

@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã sinh viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSinhVien)
        </dd>
        <dt class="col-sm-2">
            Họ tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Lớp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lop)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SinhVienId" class="btn btn-warning">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Trở về</a>
</div>